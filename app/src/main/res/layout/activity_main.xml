<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/bluetoothStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="12dp"
            />

        <TextView
            android:id="@+id/wifiStatus"
            android:layout_width="86dp"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="12dp"/>
    </LinearLayout>

<!--    <Spinner-->
<!--        android:id="@+id/devicesSpinner"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_marginTop="12dp"-->
<!--        android:spinnerMode="dropdown" />-->

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="364dp"
        android:layout_marginTop="12dp">

        <!-- 在 ScrollView 中添加要滚动的内容 -->
        <LinearLayout
            android:id="@+id/deviceListLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 添加视图元素 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="搜索到的蓝牙设备将放置在这里" />


            <!-- 添加更多视图元素 -->
            <!-- ... -->

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_goToChat"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="进入聊天界面" />

        <Button
            android:id="@+id/btm_startScan"
            android:layout_width="124dp"
            android:layout_height="59dp"
            android:layout_marginEnd="-1dp"
            android:layout_toStartOf="@+id/btn_goToChat"
            android:text="启动扫描" />

    </RelativeLayout>


</LinearLayout>
